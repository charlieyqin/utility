{
  "name": "@utilitycss/utility",
  "version": "0.2.5",
  "description": "Generator for Utility CSS frameworks",
  "author": "Andrea Moretti (@axyz) <axyzxp@gmail.com>",
  "repository": "utilitycss/utility",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src/* --ext .js",
    "build-example":
      "yarn postcss example/example.css -o example/dist/example.css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format":
      "git ls-files --directory . | egrep '\\.js$'| xargs prettier --write --print-width 80 --tab-width 2 --trailing-comma all --single-quote"
  },
  "bin": {
    "utility": "src/cli.js"
  },
  "dependencies": {
    "commander": "2.20.0",
    "cssstats": "^3.2.0",
    "deepmerge": "^3.2.0",
    "lodash": "^4.17.5",
    "opn": "^6.0.0",
    "postcss": "7.0.16"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chalk": "^2.3.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"],
    "*.css": ["prettier --write", "git add"]
  }
}
