{
  "name": "@utilitycss/utility",
  "version": "0.2.2",
  "description": "Generator for Utility CSS frameworks",
  "author": "Andrea Moretti (@axyz) <axyzxp@gmail.com>",
  "repository": "utilitycss/utility",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src/* --ext .js",
    "build-example": "yarn postcss example/example.css -o example/dist/example.css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "git ls-files --directory . | egrep '\\.js$'| xargs prettier --write --print-width 80 --tab-width 2 --trailing-comma all --single-quote"
  },
  "bin": {
    "utility": "src/cli.js"
  },
  "dependencies": {
    "commander": "2.14.1",
    "cssstats": "^3.2.0",
    "deepmerge": "^2.1.0",
    "lodash": "^4.17.5",
    "opn": "^5.3.0",
    "postcss": "6.0.19"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "chalk": "^2.3.2",
    "eslint": "^4.19.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.15.0-rc.13",
    "lint-staged": "^7.0.0",
    "postcss-cli": "^5.0.0",
    "prettier": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ]
  }
}
